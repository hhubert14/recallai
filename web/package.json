{
  "name": "recallai",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "// ---- Core ----": "",
    "dev": "npx supabase start && next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "// ---- Code Quality ----": "",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "// ---- Testing ----": "",
    "test": "vitest",
    "test:unit": "vitest --project unit",
    "test:component": "vitest --project component",
    "test:integration": "dotenv -e .env.test.local -- vitest --project integration",
    "// ---- Local Supabase ----": "",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:reset": "npx supabase start && npx supabase db reset && npm run setup-test-db && npm run db:migrate:dev && npm run db:migrate:test",
    "// ---- Database (Drizzle) ----": "",
    "db:generate": "dotenv -e .env.local -- drizzle-kit generate",
    "db:migrate:dev": "dotenv -e .env.local -- drizzle-kit migrate",
    "db:migrate:test": "dotenv -e .env.test.local -- drizzle-kit migrate",
    "db:migrate:prod": "dotenv -e .env.prod -- drizzle-kit migrate",
    "db:push:dev": "dotenv -e .env.local -- drizzle-kit push",
    "db:push:test": "dotenv -e .env.test.local -- drizzle-kit push",
    "db:studio:dev": "dotenv -e .env.local -- drizzle-kit studio",
    "db:studio:test": "dotenv -e .env.test.local -- drizzle-kit studio --port 4984",
    "// ---- Utility Scripts ----": "",
    "keep-alive": "dotenv -e .env.local -- tsx scripts/keep-alive.ts",
    "test-db-connection": "dotenv -e .env.local -- tsx scripts/test-db-connection.ts",
    "cleanup-unverified-users": "dotenv -e .env.local -- tsx scripts/cleanup-unverified-users.ts",
    "setup-test-db": "dotenv -e .env.local -- tsx scripts/setup-test-db.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.10",
    "@ai-sdk/react": "^3.0.37",
    "@langchain/core": "^0.3.57",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@stripe/stripe-js": "^7.3.1",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.49.8",
    "@types/stripe": "^8.0.417",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.1",
    "@vercel/analytics": "^1.5.0",
    "ai": "^6.0.35",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "driver.js": "^1.4.0",
    "drizzle-orm": "^0.44.6",
    "langchain": "^0.3.27",
    "lucide-react": "^0.511.0",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "openai": "^5.1.0",
    "postgres": "^3.4.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.0",
    "youtube-transcript-api": "^2.0.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.326",
    "@types/node": "^20.19.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "^16.0.7",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.7",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
